set encoding=utf-8
set autoindent


" set compatibility to vim only
set nocompatible

" set line numbers
set number 

" set tab to 4 spaces
set ts=4 sw=4
set softtabstop=4
set shiftwidth=4
set autoindent
set backspace=indent,eol,start


" turn on highlighting

syntax on

" break line

set textwidth=120


